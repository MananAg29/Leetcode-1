class Solution {
    public List<Integer> goodIndices(int[] nums, int k) {
        int n=nums.length;
        int l[]=new int[n];
        int r[]=new int[n];
        int max=nums[0];
        l[0]=1;
        for(int i=1;i<n;i++)
        {
            if(nums[i]<=max)
            {
                l[i]=l[i-1]+1;
                max=Math.min(max,nums[i]);
            }
            else
            {
                max=nums[i];
                l[i]=1;
            }
        }
        r[n-1]=1;
        max=nums[n-1];
        for(int i=n-2;i>=0;i--)
        {
            if(nums[i]<=max)
            {
                r[i]=r[i+1]+1;
                max=Math.min(max,nums[i]);
            }
            else
            {
                max=nums[i];
                r[i]=1;
            }
        }
        // for(int i=0;i<n;i++)
        //     System.out.print(l[i]+" ");
        // System.out.println();
        // for(int i=0;i<n;i++)
        //     System.out.print(r[i]+" ");
        List<Integer>ll=new LinkedList<>();
        for(int i=k;i<n-k;i++)
        {
            if(l[i-1]>=k && r[i+1]>=k)
                ll.add(i);
        }
        
        return ll;
    }
}
